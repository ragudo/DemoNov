
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:scrollbarStyle="outsideOverlay"
>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/divider"
    >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expensesds_datafield0_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FormField.EditLayout"
        >
            <EditText
                android:id="@+id/expensesds_datafield0"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightSmall"
                android:hint="Id"
                style="@style/EditTextStyle"
                android:inputType="number|numberSigned"
            >
            </EditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expensesds_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FormField.EditLayout"
        >
            <EditText
                android:id="@+id/expensesds_title"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightSmall"
                android:hint="Title"
                style="@style/EditTextStyle"
            >
            </EditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expensesds_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FormField.EditLayout"
        >
            <EditText
                android:id="@+id/expensesds_amount"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightSmall"
                android:hint="Amount"
                style="@style/EditTextStyle"
                android:inputType="numberDecimal|numberSigned"
            >
            </EditText>
        </android.support.design.widget.TextInputLayout>
        <ibmmobileappbuilder.views.DatePicker
            android:id="@+id/expensesds_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DatePicker"
            app:label="Date"
        >
        </ibmmobileappbuilder.views.DatePicker>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expensesds_categoryid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FormField.EditLayout"
        >
            <EditText
                android:id="@+id/expensesds_categoryid"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightSmall"
                android:hint="CategoryId"
                style="@style/EditTextStyle"
                android:inputType="number|numberSigned"
            >
            </EditText>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>
